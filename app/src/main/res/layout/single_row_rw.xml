<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/bookDet1row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#757575"
            android:alpha="0.8"
            android:elevation="1dp"
            android:padding="4dp"
            >

            <TextView
                android:id="@+id/RVListClinicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="#FFF"/>

            <TextView
                android:id="@+id/RVListClinicOTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RVListClinicName"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:textColor="#FFF"/>

            <ImageButton
                android:id="@+id/bookTokenDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/booktokendelete"
                android:background="#757575"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TableLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:stretchColumns="1"
            >

            <TableRow
                android:padding="4dp">

                <TextView
                    android:text="Patient's Name"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/namefield"
                    android:layout_marginLeft="4dp"
                    />
            </TableRow>

            <TableRow
                android:padding="4dp">

                <TextView
                    android:text="Token Number"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tokennofield"
                    android:textStyle="bold"
                    android:layout_marginLeft="4dp"/>
            </TableRow>

            <TableRow
                android:padding="4dp">

                <TextView
                    android:text="ID"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/idfield"
                    android:layout_marginLeft="4dp"/>
            </TableRow>

            <TableRow
                android:padding="4dp">

                <TextView
                    android:text="Contact Number"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/contactfield"
                    android:layout_marginLeft="4dp"/>
            </TableRow>

            <TableRow
                android:padding="4dp">

                <TextView
                    android:text="Date"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/datefield"
                    android:layout_marginLeft="4dp"/>
            </TableRow>
        </TableLayout>


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>