<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:contentInsetLeft="0dp"
                                   android:contentInsetRight="0dp"
                                   android:elevation="4dp"
                                   android:theme="@style/CustomTheme"
                                   app:contentInsetEnd="0dp"
                                   app:contentInsetStart="0dp"

    >

    <RelativeLayout
        android:id="@+id/TBContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <View
            android:id="@+id/TBBackground"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/CV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp"
            android:layout_below="@id/TBBackground">
            <RelativeLayout
                android:id="@+id/CVContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <RelativeLayout
                    android:id="@+id/ATNContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/ATNStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Available token number"
                        android:textColor="#424242"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/ATNValue"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="24dp"
                        android:background="#E0E0E0"
                        android:gravity="center"
                        android:textColor="#424242"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <View
                    android:id="@+id/CVLine"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/ATNContainer"
                    android:layout_margin="8dp"
                    android:background="#9E9E9E"
                    android:layout_alignRight="@id/ATNContainer"
                    android:layout_alignLeft="@id/ATNContainer"
                    android:layout_marginTop="56dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/OTNContainer"
                    android:layout_below="@id/CVLine">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/OTNStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Ongoing token number"
                        android:textColor="#424242"
                        android:textSize="16sp"
                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="NA"
                        android:textColor="#424242"
                        android:background="#E0E0E0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp"
                        />

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</android.support.v7.widget.Toolbar>