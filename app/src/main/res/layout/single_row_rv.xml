<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/contentArea"
        style="@style/LinearLayout">

        <RelativeLayout
            android:id="@+id/bookDet1row"
            style="@style/LinearLayout"
            android:background="#757575"
            android:alpha="0.8"
            android:padding="4dp"
            >

            <TextView
                android:id="@+id/RVListClinicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="#FFF"
                android:textAllCaps="true"
                android:fontFamily="monospace"
                android:includeFontPadding="true"
                />

            <TextView
                android:id="@+id/RVListClinicOTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RVListClinicName"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:textColor="#FFF"/>

            <ImageButton
                android:id="@+id/bookTokenDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/booktokendelete"
                android:background="#757575"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOKEN"
            android:gravity="center"
            android:padding="4dp"
            android:fontFamily="monospace"/>

        <TextView
            android:id="@+id/tokennofield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/namefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:gravity="center"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/datefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="1dp"
            android:layout_marginBottom="8dp"
            />


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>